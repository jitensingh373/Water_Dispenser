<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:text="SCAN QR CODE TO CONNECT TO DISPENSER"
        android:textColor="@android:color/black"
        android:textSize="18sp"/>

    <ImageView
        android:layout_width="500dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/qr_code_image"></ImageView>

    <Button
        android:id="@+id/btnAction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="68dp"
        android:text="Click To Scan QR Code"
        android:background="@drawable/gradient_normal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:text="Developed by Whirlpool GTEC"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>